<div class="middle">
  <div class="column">
    <h2>Current Player</h2>
    <table>
      <tr>
        <td><h3 data-bind="text: current_player"></h3></td>
        <td><h3 data-bind="text: current_bid"></h3></td>
        <td><h4 data-bind="text: current_team"></h4></td>
      </tr>
    </table>
    
    <table>
      <tr>
        <td><label for="bid_input">$</label></td>
        <td><input id="bid_input" type="number" style="width: 100px;" min="0" data-bind="value: start_bid, attr: { min: start_bid }"/></td>
      </tr>
    </table>
    
    <button id="bid" class="btn btn-large btn-primary">Bid Now</button>
  </div>
  
  <div class="timer">
    <h1 data-bind="text: seconds_format">Time: 10</h3>
  </div>
  
  <div class="column scrollbar middle" style="clear: left;">
    <table class="table-hover table">
      <thead>
        <tr>
          <th>Player Name</th>
          <th>Country</th>
          <th>Ranking</th>
        </tr>
      </thead>
      
      <tbody>
        <% @available.each do |player| %>
        <tr>
          <td><%= link_to player.name, 'http://www.atpworldtour.com' + player.link_name, :target => "_blank" %></td>
          <td><%= player.country %></td>
          <td><%= player.rank %></td>
          <td><a href="" class="nominate">Nominate</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="column">
    <h4>My Team</h4>
    <h3 id="team_name"><%= @team.name %></h3>
    <table class="table table-hover table-bordered" style="width: 200px;">
      <tbody>
        <% for index in 0..@league.players_per_team-1 %>
          <tr>
            <% player = @team.players[index] %>
            <% if player %>
              <td><%= player.name %>  (<%= player.country %>)</td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>
