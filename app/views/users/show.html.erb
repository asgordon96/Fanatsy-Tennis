<div>
  <%= link_to "Logout", sessions_signout_path, :method => :post, :class => ["right", "btn"] %>
</div>

<div class="centered", style="clear: right;">
  <%= link_to "Join a League", leagues_path, :class => "btn" %>
  <%= link_to "Create a New League", new_league_path, :class => "btn" %>
  
  <h3>My Teams</h3>
  <table>
  <% @user.teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, league_team_path(team.league, team) %></td>
    </tr>
  <% end %>
</div>